<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <Button
       android:id="@+id/btnRemoveMainMenu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:onClick="startRemove"
       android:text="Remove Photobombers from the Picture" />

   <Button
       android:id="@+id/btnReplaceMainMenu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/btnRemoveMainMenu"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:onClick="startReplacements"
       android:text="Replace Photobombers with Something Else" />

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/btnReplaceMainMenu"
       android:layout_alignParentLeft="true"
       android:paddingBottom="50dp"
       android:paddingLeft="50dp"
       android:paddingRight="50dp"
       android:paddingTop="50dp"
       android:src="@drawable/camera" />

</RelativeLayout>
